#!/bin/bash
set -e -o pipefail
recs fromcsv -d $'\t' --header source.tsv \
    | recs xform -E transform.recs \
    | ./Ikeda-17262715/annotate-samples \
    | recs xform '{{sample/subject}} = join "/", {{sample/pubmed_id}}, {{sample/subject}} if {{sample/subject}}' \
    | recs tocsv -k "landmark,info/source_line,location,ltr,note,orientation_in_landmark,sample/original_id,sample/pubmed_id,sample/subject,sample/years_on_art,sample/clone,sample/tissue,sample/tissue_url,sample/disease,sample/genbank,source_name"
