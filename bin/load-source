#!/bin/bash
set -e -o pipefail
isdb=$(dirname $0)/..

if [[ -z $1 ]]; then
    echo "usage: $(basename $0) source-name"
    exit 1
fi
name=$1

set -o nounset

$isdb/bin/drop-source $name
$isdb/bin/create-source $isdb/sources/$name/metadata.json
$isdb/bin/load-integrations $isdb/sources/$name/transformed.csv
